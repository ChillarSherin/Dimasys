<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/arrow_green_7"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Receive Cash"
            app:titleTextAppearance="@style/TextAppearance.Material3.BodyLarge" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/firstLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/receive_cash_gradient"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="27dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvReceiveCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive Cash - Name of M"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp"
                        android:fontFamily="@font/dm_sans"
                        android:textFontWeight="700"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvPartiallyUnpaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Partially/Unpaid Invoice Count"
                        android:textColor="#000000"
                        android:textFontWeight="400"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvReceiveCash" />

                    <TextView
                        android:id="@+id/etPartiallyUnpaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:background="@drawable/receive_cash_gradient"
                        android:backgroundTint="#E3ECFF"
                        android:paddingVertical="10dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvPartiallyUnpaid"
                        app:layout_constraintTop_toBottomOf="@+id/tvPartiallyUnpaid" />


                    <TextView
                        android:id="@+id/tvPendingAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Pending Amount"
                        android:textColor="#000000"
                        android:textFontWeight="400"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etPartiallyUnpaid" />

                    <TextView
                        android:id="@+id/etPendingAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:background="@drawable/receive_cash_gradient"
                        android:backgroundTint="#E3ECFF"
                        android:paddingVertical="10dp"
                        android:textStyle="bold"
                        android:paddingStart="5dp"
                        android:textColor="@color/black"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvPendingAmount"
                        app:layout_constraintTop_toBottomOf="@+id/tvPendingAmount" />


                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Amount"
                        android:textColor="#000000"
                        android:textFontWeight="400"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etPendingAmount" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:background="@drawable/receive_cash_gradient"
                        android:backgroundTint="#E3ECFF"
                        android:paddingVertical="10dp"
                        android:paddingStart="5dp"
                        android:maxLength="8"
                        android:inputType="numberDecimal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvAmount"
                        app:layout_constraintTop_toBottomOf="@+id/tvAmount" />


                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="Description"
                        android:textColor="#000000"
                        android:textFontWeight="400"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etAmount" />

                    <EditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:background="@drawable/receive_cash_gradient"
                        android:backgroundTint="#E3ECFF"
                        android:paddingVertical="10dp"
                        android:paddingStart="5dp"
                        android:inputType="text"
                        android:maxLength="30"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvDescription"
                        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />


                    <TextView
                        android:id="@+id/tvBtnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/loan_alert_gradient"
                        android:gravity="center"
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="21dp"
                        android:paddingVertical="14sp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/etDescription" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/receive_cash_gradient"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="27dp"
                    android:layout_marginTop="21dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/firstLayout">

                    <TextView
                        android:id="@+id/tvCashReceived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cash Received"
                        android:textColor="@color/dark_blue"
                        android:textSize="12sp"
                        android:fontFamily="@font/dm_sans"
                        android:textFontWeight="700"
                        android:padding="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvFromDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="From"
                        android:textColor="#000000"
                        android:textFontWeight="400"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCashReceived" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tvMerchantName"
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/receive_cash_gradient"
                        app:boxBackgroundColor="@color/button_theme_cx"
                        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                        app:boxCornerRadiusTopStart="@dimen/_10sdp"
                        app:hintEnabled="false"
                        app:endIconMode="custom"
                        android:focusable="false"
                        app:endIconDrawable="@drawable/calendar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvFromDate">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMerchantName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/receive_cash_gradient"
                            android:backgroundTint="@color/button_theme_cx"
                            app:boxBackgroundColor="@color/button_theme_cx"
                            android:inputType="text"
                            android:paddingVertical="@dimen/_11sdp"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="RtlSymmetry" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <TextView
                        android:id="@+id/tvToDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/dm_sans"
                        android:text="To"
                        android:textColor="#000000"
                        android:textFontWeight="400"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMerchantName" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tvTo_Date"
                        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/receive_cash_gradient"
                        app:boxBackgroundColor="@color/button_theme_cx"
                        app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                        app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                        app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                        app:boxCornerRadiusTopStart="@dimen/_10sdp"
                        app:hintEnabled="false"
                        app:endIconMode="custom"
                        android:focusable="false"
                        app:endIconDrawable="@drawable/calendar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvToDate">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTo_Date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/receive_cash_gradient"
                            android:backgroundTint="@color/button_theme_cx"
                            app:boxBackgroundColor="@color/button_theme_cx"
                            android:inputType="text"
                            android:paddingVertical="@dimen/_11sdp"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="RtlSymmetry" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tvSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:layout_marginBottom="18dp"
                        android:background="@drawable/loan_alert_gradient"
                        android:gravity="center"
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="21dp"
                        android:paddingVertical="14sp"
                        android:text="Search"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvTo_Date" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="23dp"
                        android:layout_marginBottom="18dp"
                        android:gravity="center"
                        android:layout_marginStart="21dp"
                        android:layout_marginEnd="21dp"
                        android:paddingVertical="14sp"
                        android:text="No Data Found"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSearch" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
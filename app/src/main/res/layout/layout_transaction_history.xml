<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/dm_sans"
                android:text="No"
                android:textColor="#A3AED0"
                app:layout_constraintEnd_toStartOf="@+id/txtValSender"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtValSender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/dm_sans"
                android:gravity="right"
                tools:text="23233"
                android:visibility="gone"
                android:textColor="@color/dark_blue"
                app:layout_constraintBottom_toBottomOf="@+id/txtNo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtNo"
                app:layout_constraintTop_toTopOf="@+id/txtNo" />

            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/divider_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtNo" />

            <TextView
                android:id="@+id/txtReceiver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans"
                android:text="Amount"
                android:textColor="#B8C0DA"
                app:layout_constraintEnd_toStartOf="@+id/txtValReceiver"
                app:layout_constraintStart_toStartOf="@+id/txtNo"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/txtValReceiver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:gravity="right"
                android:text="1.0"
                android:paddingEnd="10dp"
                android:textColor="@color/dark_blue"
                app:layout_constraintBottom_toBottomOf="@+id/txtReceiver"
                app:layout_constraintEnd_toEndOf="@+id/txtValSender"
                app:layout_constraintStart_toEndOf="@+id/txtReceiver"
                app:layout_constraintTop_toTopOf="@+id/txtReceiver" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/divider_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtReceiver" />

            <TextView
                android:id="@+id/txtAmountTrans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Transaction ID"
                android:textColor="@color/light_blue"
                app:layout_constraintEnd_toStartOf="@+id/txtValAmount"
                app:layout_constraintStart_toStartOf="@+id/txtReceiver"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

            <TextView
                android:id="@+id/txtValAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="RCHX367e33a02rtx"
                android:textColor="@color/dark_blue"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtAmountTrans"
                app:layout_constraintEnd_toEndOf="@+id/txtValReceiver"
                app:layout_constraintStart_toEndOf="@+id/txtAmountTrans"
                app:layout_constraintTop_toTopOf="@+id/txtAmountTrans"
                app:layout_constraintVertical_bias="0.0" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/divider_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAmountTrans" />

            <TextView
                android:id="@+id/txtDateTrans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/dm_sans"
                android:text="Date"
                android:textColor="@color/light_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtValDate"
                app:layout_constraintStart_toStartOf="@+id/txtAmountTrans"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <TextView
                android:id="@+id/txtValDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:gravity="right"
                android:textColor="@color/dark_blue"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/txtDateTrans"
                app:layout_constraintEnd_toEndOf="@+id/txtValAmount"
                app:layout_constraintStart_toEndOf="@+id/txtDateTrans"
                app:layout_constraintTop_toTopOf="@+id/txtDateTrans"
                tools:text="2024-07-02 11:54:33" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/arrow_green_7"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Merchants"
            app:titleTextColor="@color/dark_blue"
            app:titleTextAppearance="@style/TextAppearance.Material3.BodyLarge" />

        <!-- Container for scrollable content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Merchant Layout -->
            <LinearLayout
                android:id="@+id/merchantLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_gradient_merchant"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:padding="16dp"
                app:cardCornerRadius="@dimen/_13sdp">

                <TextView
                    android:id="@+id/apply_loan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_new_merchant"
                    android:textColor="@color/pinFieldLibraryAccent"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableEnd="@drawable/ic_arrow_forward"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

            </LinearLayout>


            <!-- TextView for debugging -->

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:listitem="@layout/layout_merchant_details" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

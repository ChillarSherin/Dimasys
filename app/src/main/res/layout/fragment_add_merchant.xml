<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/arrow_green_7"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Add Merchant"
            app:titleTextAppearance="@style/TextAppearance.Material3.BodyLarge" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Container for scrollable content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvMerchantName"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:elevation="@dimen/_5sdp"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:errorTextColor="@color/text_black"
                    app:hintEnabled="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMerchantName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/merchant_name"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvMerchantCode"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvMerchantName">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMerchantCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/merchant_code"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="15"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvContact"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvMerchantCode">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/contact"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvEmail"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvContact">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="25"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvPassword"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvEmail">

                    3<com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pass_word"
                        android:inputType="text"
                    android:singleLine="true"
                    android:maxLength="10"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvAdressLineOne"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvPassword">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddressLIneOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_line_one"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="30"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvAdressLineTwo"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvAdressLineOne">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddressLIneTwo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/address_line_two"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="30"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvColony"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvAdressLineTwo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etColony"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/colony"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvState"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvColony">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/state"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvPostalCode"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvState">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPostalCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/postal_code"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tvCountry"
                    style="@style/ThemeOverlay.Material3.AutoCompleteTextView.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_18sdp"
                    android:layout_marginBottom="@dimen/_7sdp"
                    android:layout_marginTop="10dp"
                    android:elevation="@dimen/_5sdp"
                    app:boxBackgroundColor="@color/button_theme_cx"
                    app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                    app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                    app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                    app:boxCornerRadiusTopStart="@dimen/_10sdp"
                    app:boxStrokeColor="@color/text_black"
                    app:boxStrokeErrorColor="@color/primary_red"
                    app:boxStrokeWidth="0.2dp"
                    app:endIconDrawable="@android:drawable/arrow_down_float"
                    app:endIconMode="custom"
                    app:errorTextColor="@color/secondary_red"
                    app:hintEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/tvPostalCode">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/country"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="10"
                        android:paddingVertical="@dimen/_11sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/loan_alert_gradient"
                    android:gravity="center"
                    android:layout_marginStart="21dp"
                    android:layout_marginEnd="21dp"
                    android:paddingVertical="14sp"
                    android:text="Submit"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvCountry" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/root_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient">

            <!-- Toolbar -->
            <include
                android:id="@+id/toolbar"
                layout="@layout/partner_toolbar" />

            <!-- Dashboard Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_distributors"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onboarded_distributors"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/onbrd_distri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_distributors"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onboarded_sales_team"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/onbrd_sale_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_distributors"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/onboarded_merchants"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/onbrd_merchant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_inventory"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_available_inventory"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/onbrd_ttl_inv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_inventory"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_inventory_distributor"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/ttl_ivtry_dist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:padding="8dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_inventory"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_inventory_retailer"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/_8ssp" />

                    <TextView
                        android:id="@+id/ttl_invt_retailer_lvl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Recent Products -->
            <androidx.cardview.widget.CardView
                android:id="@+id/recentProdPart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/button_theme_gx"
                app:cardCornerRadius="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/products"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/recent_products"
                        android:textColor="@color/theme_green"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <!-- Recent Transactions -->
            <androidx.cardview.widget.CardView
                android:id="@+id/recentTransPart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:orientation="horizontal"
                app:cardBackgroundColor="@color/button_theme_gx"
                app:cardCornerRadius="@dimen/_13sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/transcation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_forward"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/recent_transactions"
                        android:textColor="@color/theme_green"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Total Billing, Money Collected, Total Payment Collected -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txtTotalBill"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/total_billing"
                        android:maxLines="2"
                        android:background="@drawable/button_background"
                        android:textColor="@color/text_black"
                        android:drawableEnd="@drawable/ic_arrow_forward_border"
                        android:padding="@dimen/_10ssp"
                        android:drawablePadding="18dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="start"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/money_collect"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/money_collected"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_13ssp"
                        android:background="@drawable/button_background"
                        android:drawableEnd="@drawable/ic_arrow_forward_border"
                        android:padding="@dimen/_10ssp"
                        android:drawablePadding="18dp"
                        android:gravity="center_vertical"
                        android:layout_gravity="start"
                        android:layout_marginStart="8dp"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/total_pay_collect"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginVertical="@dimen/_13sdp"
                    android:text="@string/total_payment_collected"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13ssp"
                    android:background="@drawable/button_background"
                    android:drawableEnd="@drawable/ic_arrow_forward_border"
                    android:padding="@dimen/_10ssp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"/>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/login_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/primary_red"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </LinearLayout>

    </ScrollView>

</layout>


